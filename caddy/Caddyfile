}

adakite.ozeliurs.com, *.adakite.ozeliurs.com {
	tls {
		dns cloudflare {env.CF_API_TOKEN}
		resolvers 1.1.1.1
	}
	reverse_proxy https://192.168.1.134 {
		header_up Host {host}
		header_up X-Real-IP {remote}

		transport http {
			tls_insecure_skip_verify
		}
	}
}

